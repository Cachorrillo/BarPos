@page
@model IndexModel
@{
    ViewData["Title"] = "BarPOS - Inicio";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-3">
            <i class="bi bi-shop"></i> BarPOS
        </h1>
        <p class="lead">Sistema de Punto de Venta</p>
    </div>

    <div class="row justify-content-center">
        <!-- Botón Administrador -->
        <div class="col-md-5 mb-4">
            <div class="card shadow-lg h-100 border-primary" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#modalAdmin">
                <div class="card-body text-center py-5">
                    <i class="bi bi-shield-lock-fill text-primary" style="font-size: 5rem;"></i>
                    <h2 class="card-title mt-3">Administrador</h2>
                    <p class="card-text text-muted">
                        Acceso completo al sistema
                    </p>
                    <ul class="list-unstyled mt-3">
                        <li><i class="bi bi-check-circle text-success"></i> Gestión de inventario</li>
                        <li><i class="bi bi-check-circle text-success"></i> Punto de venta</li>
                        <li><i class="bi bi-check-circle text-success"></i> Punto de venta</li>
                        <li><i class="bi bi-check-circle text-success"></i> Cuentas cerradas</li>
                        <li><i class="bi bi-check-circle text-success"></i> Cuentas sin pagar</li>
                        <li><i class="bi bi-check-circle text-success"></i> Reportes y cuentas</li>
                    </ul>
                </div>
                <div class="card-footer bg-primary text-white text-center">
                    <strong>Clic para ingresar</strong>
                </div>
            </div>
        </div>

        <!-- Botón Empleado -->
        <div class="col-md-5 mb-4">
            <form method="post" asp-page-handler="Empleado">
                <button type="submit" class="btn btn-link text-decoration-none p-0 w-100">
                    <div class="card shadow-lg h-100 border-success">
                        <div class="card-body text-center py-5">
                            <i class="bi bi-person-fill text-success" style="font-size: 5rem;"></i>
                            <h2 class="card-title mt-3 text-dark">Empleado</h2>
                            <p class="card-text text-muted">
                                Acceso a ventas
                            </p>
                            <ul class="list-unstyled mt-3 text-dark">
                                <li><i class="bi bi-check-circle text-success"></i> Punto de venta</li>
                                <li><i class="bi bi-check-circle text-success"></i> Cuentas cerradas</li>
                                <li><i class="bi bi-check-circle text-success"></i> Cuentas sin pagar</li>
                                <li><i class="bi bi-check-circle text-success"></i> Reportes y cuentas</li>
                            </ul>
                        </div>
                        <div class="card-footer bg-success text-white text-center">
                            <strong>Clic para ingresar</strong>
                        </div>
                    </div>
                </button>
            </form>
        </div>
    </div>
</div>

<!-- Modal para contraseña de administrador -->
<div class="modal fade" id="modalAdmin" tabindex="-1" aria-labelledby="modalAdminLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalAdminLabel">
                    <i class="bi bi-shield-lock"></i> Acceso Administrador
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="Admin">
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i> @Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <div class="mb-3">
                        <label for="password" class="form-label">Contraseña</label>
                        <input type="password" class="form-control form-control-lg" id="password"
                               name="password" placeholder="Ingrese la contraseña" required autofocus>
                    </div>
                   
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-unlock"></i> Ingresar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <script>
            // Reabrir el modal si hay un error
            var modal = new bootstrap.Modal(document.getElementById('modalAdmin'));
            modal.show();
        </script>
    }
}