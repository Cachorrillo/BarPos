<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BarPos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BarPos.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

</head>
<body>

    @{
        var tipoUsuario = Context.Session.GetString("TipoUsuario");
        var esAdmin = tipoUsuario == "Administrador";
        var esEmpleado = tipoUsuario == "Empleado";
        var hayUsuario = !string.IsNullOrEmpty(tipoUsuario);
    }

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">BarPos</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        @if (hayUsuario)
                        {
                            @* Opciones solo para Administrador *@
                            @if (esAdmin)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Productos/Index">Productos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Categorias/Index">Categorias</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Presentaciones/Index">Presentaciones</a>
                                </li>
                            }


                            @* Opciones para todos *@
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/POS/Index">Punto de Venta</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/POS/CuentasCerradas">
                                    <i class="bi bi-journal-check"></i> Cuentas Cerradas
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-page="/POS/CuentasAbiertas">
                                    <i class="bi bi-hourglass-split"></i> Cuentas Sin Pagar
                                </a>
                            </li>
                        }

                    </ul>

                    @* Información del usuario *@
                    <ul class="navbar-nav">
                        @if (hayUsuario)
                        {
                            <li class="nav-item">
                                <span class="navbar-text me-2">
                                    @if (esAdmin)
                                    {
                                        <i class="bi bi-shield-fill-check text-primary"></i>
                                        <span class="badge bg-primary">Administrador</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-person-fill text-success"></i>
                                        <span class="badge bg-success">Empleado</span>
                                    }
                                </span>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-page="/Roles/Logout" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BarPos - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>