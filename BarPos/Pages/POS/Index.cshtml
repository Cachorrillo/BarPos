@page
@model BarPos.Pages.POS.IndexModel
@{
    ViewData["Title"] = "Punto de Venta (POS)";
}

<h2 class="text-center mb-4">🧾 Cuentas Abiertas</h2>

<div class="mb-3 d-flex justify-content-between align-items-center">
    <div>
        <a asp-page="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nueva Cuenta
        </a>
        <a asp-page="/POS/VentaRapida" class="btn btn-primary">
            <i class="bi bi-lightning-charge"></i> Venta Rápida
        </a>
        <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#modalCerrarCaja">
            <i class="bi bi-calculator"></i> Cerrar Caja
        </button>
    </div>

    <!-- BOTÓN IMPRIMIR CORTE -->
    <button id="btnImprimirCorte"
            class="btn btn-secondary"
            onclick="imprimirCorteSeleccionado()"
            disabled>
        <i class="bi bi-printer"></i> Imprimir Corte
    </button>
</div>

@if (Model.CuentasAbiertas.Count == 0)
{
    <div class="alert alert-info text-center">
        No hay cuentas abiertas actualmente.
    </div>
}
else
{
    <table class="table table-striped table-bordered align-middle text-center">
        <thead class="table-dark">
            <tr>
                <th>Cliente</th>
                <th>Fecha de Apertura</th>
                <th>Total (₡)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cuenta in Model.CuentasAbiertas)
            {
                <!-- FILA SELECCIONABLE -->
                <tr onclick="seleccionarCuenta(@cuenta.Id)" style="cursor:pointer;">
                    <td>@cuenta.NombreCliente</td>
                    <td>@cuenta.FechaApertura.ToString("g")</td>
                    <td>@cuenta.Total.ToString("N2")</td>
                    <td>
                        <a asp-page="Detalles" asp-route-id="@cuenta.Id" class="btn btn-primary btn-sm">
                            <i class="bi bi-cart-plus"></i> Agregar Productos
                        </a>
                        <a asp-page="Detalles" asp-route-id="@cuenta.Id" class="btn btn-outline-primary btn-sm">
                            Ver / Cerrar cuenta
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- Modal Cerrar Caja -->
<div class="modal fade" id="modalCerrarCaja" tabindex="-1" aria-labelledby="modalCerrarCajaLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="modalCerrarCajaLabel">
                    <i class="bi bi-calculator"></i> Resumen de Caja
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <!-- Selector de fecha -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <label for="fechaCaja" class="form-label fw-bold">Fecha:</label>
                        <input type="date" id="fechaCaja" class="form-control" />
                    </div>
                </div>

                <!-- Área de carga -->
                <div id="loadingCaja" class="text-center d-none">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-2">Generando resumen...</p>
                </div>

                <!-- Área de resultados -->
                <div id="resultadoCaja" class="d-none">
                    <!-- Resumen General -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card text-center border-primary">
                                <div class="card-body">
                                    <h6 class="card-title text-muted">Total Cuentas</h6>
                                    <h3 class="text-primary" id="totalCuentas">0</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center border-success">
                                <div class="card-body">
                                    <h6 class="card-title text-muted">Total Ventas</h6>
                                    <h3 class="text-success" id="totalVentas">₡0.00</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center border-info">
                                <div class="card-body">
                                    <h6 class="card-title text-muted">Efectivo</h6>
                                    <h3 class="text-info" id="ventasEfectivo">₡0.00</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center border-warning">
                                <div class="card-body">
                                    <h6 class="card-title text-muted">Tarjeta</h6>
                                    <h3 class="text-warning" id="ventasTarjeta">₡0.00</h3>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Productos más y menos vendidos -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header bg-success text-white">
                                    <h6 class="mb-0">📈 Productos Más Vendidos (Top 5)</h6>
                                </div>
                                <div class="card-body">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Producto</th>
                                                <th>Presentación</th>
                                                <th>Cantidad</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <tbody id="tablaMasVendidos">
                                            <tr><td colspan="4" class="text-center text-muted">Sin datos</td></tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header bg-danger text-white">
                                    <h6 class="mb-0">📉 Productos Menos Vendidos (Top 5)</h6>
                                </div>
                                <div class="card-body">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Producto</th>
                                                <th>Presentación</th>
                                                <th>Cantidad</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <tbody id="tablaMenosVendidos">
                                            <tr><td colspan="4" class="text-center text-muted">Sin datos</td></tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Lista completa -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header bg-primary text-white">
                                    <h6 class="mb-0">📋 Lista Productos Vendidos</h6>
                                </div>
                                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                                    <table class="table table-sm table-striped table-hover">
                                        <thead class="sticky-top bg-light">
                                            <tr>
                                                <th>Producto</th>
                                                <th>Presentación</th>
                                                <th class="text-center">Cantidad</th>
                                                <th class="text-end">Total Ventas</th>
                                            </tr>
                                        </thead>
                                        <tbody id="tablaTodosProductos">
                                            <tr><td colspan="4" class="text-center text-muted">Sin datos</td></tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Mensaje de error -->
                <div id="errorCaja" class="alert alert-warning d-none" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> <span id="mensajeError"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" id="btnImprimirResumen" class="btn btn-primary d-none">
                    <i class="bi bi-printer"></i> Imprimir Resumen
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    @@media print {
        .modal-header, .modal-footer, .btn, nav {
            display: none !important;
        }

        .modal-dialog {
            max-width: 100% !important;
            margin: 0 !important;
        }

        .modal-content {
            border: none !important;
        }

        .sticky-top {
            position: sticky;
            top: 0;
            z-index: 10;
        }
    }

    /* Fila seleccionada */
    .fila-seleccionada {
        background-color: #ffe49c !important;
    }
</style>

@section Scripts {

    <!-- ============================== -->
    <!--   IMPRESIÓN POS + QZ TRAY      -->
    <!-- ============================== -->
    <script src="~/js/qz-tray.js"></script>
    <script src="~/js/pos-imprimir.js"></script>

    <script>
        let cuentaSeleccionada = null;
        let filaSeleccionada = null;

        // Seleccionar cuenta
        function seleccionarCuenta(id) {
            cuentaSeleccionada = id;

            if (filaSeleccionada)
                filaSeleccionada.classList.remove("fila-seleccionada");

            filaSeleccionada = event.currentTarget;
            filaSeleccionada.classList.add("fila-seleccionada");

            document.getElementById("btnImprimirCorte").disabled = false;
        }

        // Botón imprimir corte
        async function imprimirCorteSeleccionado() {
            if (!cuentaSeleccionada) {
                alert("Seleccione una cuenta.");
                return;
            }

            try {
                await imprimirCuenta(cuentaSeleccionada);
                alert("Corte impreso correctamente.");
            }
            catch (err) {
                console.error(err);
                alert("❌ Error al imprimir el corte.\nVerifique que QZ Tray esté abierto.");
            }
        }
    </script>


    <!-- ============================== -->
    <!--   SCRIPT ORIGINAL DEL MODAL    -->
    <!-- ============================== -->

    <script>
        $(function () {
            const fmt = v => (Number(v) || 0)
                .toLocaleString("es-CR", { minimumFractionDigits: 2, maximumFractionDigits: 2 });

            const hoy = new Date().toISOString().split("T")[0];
            $("#fechaCaja").val(hoy);

            // 🔥 AHORA SÍ SE ACTIVA
            $("#modalCerrarCaja").on("shown.bs.modal", consultarResumen);
            $("#fechaCaja").on("change", consultarResumen);

            $("#btnImprimirResumen").on("click", () => window.print());

            function consultarResumen() {
                const fecha = $("#fechaCaja").val();
                if (!fecha) { alert("Por favor selecciona una fecha."); return; }

                mostrarEstado("cargando");

                $.ajax({
                    url: "/POS/Index?handler=ResumenCaja",
                    type: "GET",
                    data: { fecha },
                    success: function (data) {
                        if (!data.success) {
                            mostrarEstado("error", data.message);
                            return;
                        }

                        $("#totalCuentas").text(data.totalCuentas);
                        $("#totalVentas").text("₡" + fmt(data.totalVentas));
                        $("#ventasEfectivo").text("₡" + fmt(data.ventasEfectivo));
                        $("#ventasTarjeta").text("₡" + fmt(data.ventasTarjeta));

                        rellenarTabla("#tablaMasVendidos", data.productosMasVendidos);
                        rellenarTabla("#tablaMenosVendidos", data.productosMenosVendidos);
                        rellenarTablaCompleta("#tablaTodosProductos", data.todosProductosVendidos);

                        mostrarEstado("ok");
                    },
                    error: function (xhr) {
                        const msg = xhr.responseText || "Sin detalles";
                        mostrarEstado("error", "Error al cargar el resumen: " + msg);
                        console.error("Error petición:", xhr);
                    }
                });
            }

            function mostrarEstado(estado, mensaje) {
                const loading = $("#loadingCaja");
                const resultado = $("#resultadoCaja");
                const error = $("#errorCaja");
                const imprimir = $("#btnImprimirResumen");

                if (estado === "cargando") {
                    loading.removeClass("d-none");
                    resultado.addClass("d-none");
                    error.addClass("d-none");
                    imprimir.addClass("d-none");
                } else if (estado === "error") {
                    loading.addClass("d-none");
                    resultado.addClass("d-none");
                    error.removeClass("d-none");
                    imprimir.addClass("d-none");
                    $("#mensajeError").text(mensaje || "Error desconocido.");
                } else if (estado === "ok") {
                    loading.addClass("d-none");
                    resultado.removeClass("d-none");
                    error.addClass("d-none");
                    imprimir.removeClass("d-none");
                }
            }

            function rellenarTabla(selector, lista) {
                const tbody = $(selector);
                tbody.empty();
                if (!lista || lista.length === 0) {
                    tbody.append('<tr><td colspan="4" class="text-center text-muted">Sin datos</td></tr>');
                    return;
                }
                lista.forEach(p => {
                    tbody.append(`
                        <tr>
                            <td>${p.nombreProducto}</td>
                            <td>${p.presentacion || "-"}</td>
                            <td class="text-center">${p.cantidadVendida}</td>
                            <td class="text-end">₡${fmt(p.totalVentas)}</td>
                        </tr>
                    `);
                });
            }

            function rellenarTablaCompleta(selector, lista) {
                const tbody = $(selector);
                tbody.empty();
                if (!lista || lista.length === 0) {
                    tbody.append('<tr><td colspan="4" class="text-center text-muted">Sin datos</td></tr>');
                    return;
                }

                let totalCantidad = 0;
                let totalVentasSum = 0;

                lista.forEach(p => {
                    totalCantidad += p.cantidadVendida;
                    totalVentasSum += p.totalVentas;

                    tbody.append(`
                        <tr>
                            <td>${p.nombreProducto}</td>
                            <td>${p.presentacion || "-"}</td>
                            <td class="text-center">${p.cantidadVendida}</td>
                            <td class="text-end">₡${fmt(p.totalVentas)}</td>
                        </tr>
                    `);
                });

                tbody.append(`
                    <tr class="table-dark fw-bold">
                        <td colspan="2" class="text-end">TOTALES:</td>
                        <td class="text-center">${totalCantidad}</td>
                        <td class="text-end">₡${fmt(totalVentasSum)}</td>
                    </tr>
                `);
            }
        });
    </script>
}

