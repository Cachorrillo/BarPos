<!-- Scripts específicos de JavaScript para esta página -->
@section Scripts {

    <script src="~/js/qz-tray.js"></script>
    <script src="~/js/pos-imprimir.js"></script>

    <script>
        $(document).ready(function () {
            const cuentaId = @Model.Cuenta.Id;// Obtiene el ID de la cuenta actual del modelo Razor
            const token = $('#antiForgery input[name="__RequestVerificationToken"]').val();// Token antifalsificación
            const fmt = (v) => (Number(v) || 0).toLocaleString("es-CR", { minimumFractionDigits: 2, maximumFractionDigits: 2 });
            // Función auxiliar para formatear números con dos decimales y estilo costarricense (₡)
            let categoriaSeleccionada = "";
            let productosEnCarrito = [];
            let productoTemporal = null;
            let stockDisponiblePorProducto = {};



            function mostrarModalError(texto) {
                $("#modalErrorTexto").html(texto.replace(/\n/g, "<br>"));
                const modal = new bootstrap.Modal(document.getElementById("modalError"));
                modal.show();
            }


            // =================== MODAL DE AGREGAR PRODUCTOS ===================


                    $(".categoria-btn").click(function () {
            categoriaSeleccionada = $(this).data("nombre").toLowerCase();
            const categoriaId = $(this).data("id");

            $(".categoria-btn").removeClass("btn-primary").addClass("btn-outline-primary");
            $(this).removeClass("btn-outline-primary").addClass("btn-primary");

            $("#contenedorProductos").html("<p class='text-muted text-center'>Cargando productos...</p>");

            $.getJSON(`?handler=ProductosPorCategoria&categoriaId=${categoriaId}`, function (data) {
                if (data.length === 0) {
                    $("#contenedorProductos").html("<p class='text-center text-danger'>No hay productos en esta categoría.</p>");
                    return;
                }

                stockDisponiblePorProducto = {};
                let html = "<div class='d-flex flex-wrap gap-2 justify-content-start'>";

                $.each(data, function (i, producto) {

                    // SI ES LICOR → NO MOSTRAR STOCK
                    let stockBadge = "";
                    if (categoriaSeleccionada !== "licores") {
                        stockDisponiblePorProducto[producto.id] = producto.stock;
                        stockBadge = producto.stock > 0
                            ? `<span class="badge bg-success ms-1" id="badge-${producto.id}">${producto.stock}</span>`
                            : `<span class="badge bg-danger ms-1">Sin stock</span>`;
                    } else {
                        stockDisponiblePorProducto[producto.id] = Infinity; // stock infinito para visual
                    }

                    html += `
                        <button type="button"
                            class="btn btn-outline-dark producto-btn"
                            data-id="${producto.id}"
                            data-nombre="${producto.nombre}"
                            data-stock="${producto.stock}">
                            ${producto.nombre} ${stockBadge}
                        </button>
                    `;
                });

                html += "</div>";

                $("#contenedorProductos").html(html);
                $("#seccionPresentaciones").hide();
            });
        });

        // =================== Selección de producto ===================

        $(document).on("click", ".producto-btn", function () {
            const productoId = $(this).data("id");
            const nombre = $(this).data("nombre");
            const stock = parseInt($(this).data("stock")) || 0;
            const cantidad = parseInt($("#Cantidad").val()) || 1;

            $(".producto-btn").removeClass("btn-dark").addClass("btn-outline-dark");
            $(this).removeClass("btn-outline-dark").addClass("btn-dark");

            // SI ES LICOR → obligar a escoger presentacion
            if (categoriaSeleccionada === "licores") {
                productoTemporal = { productoId, nombre, cantidad, stock };
                $("#seccionPresentaciones").show();
                $("#PresentacionId").html("<option>Cargando...</option>");

                $.getJSON(`?handler=PresentacionesPorProducto&productoId=${productoId}`, function (data) {
                    $("#PresentacionId").empty().append('<option value="">-- Seleccione una presentación --</option>');

                    $.each(data, function (i, pres) {
                        // En licores no mostramos stock
                        $("#PresentacionId").append(`
                            <option value="${pres.id}">
                                ${pres.nombre} - ₡${pres.precioVenta.toFixed(2)}
                            </option>
                        `);
                    });
                });
            }
            else {
                // Producto normal → validar stock
                if (stock < cantidad) {
                    alert(`⚠️ Stock insuficiente de "${nombre}". Solo hay ${stock}.`);
                    return;
                }

                agregarAlCarrito({
                    productoId,
                    presentacionId: null,
                    nombre,
                    presentacion: "-",
                    cantidad,
                    stock
                });
            }
        });

        // =================== Selección de presentación (solo licores) ===================

        $("#PresentacionId").change(function () {
            const presId = $(this).val();

            if (!productoTemporal || !presId) return;

            const cantidad = productoTemporal.cantidad;

            // Para licores: NO validamos stock en base a unidades
            agregarAlCarrito({
                productoId: productoTemporal.productoId,
                presentacionId: presId,
                nombre: productoTemporal.nombre,
                presentacion: $("#PresentacionId option:selected").text(),
                cantidad,
                stock: Infinity
            });

            productoTemporal = null;
            $("#seccionPresentaciones").hide();
        });

        // =================== Agregar al carrito ===================

        function agregarAlCarrito(item) {

            // 🔥 Para licores → SIN validación de stock visual
            if (categoriaSeleccionada === "licores") {
                item.stockRestante = "∞";
                productosEnCarrito.push(item);
                renderTabla();
                return;
            }

            // Productos normales → sí manejan stock
            const idx = productosEnCarrito.findIndex(p =>
                p.productoId === item.productoId &&
                p.presentacionId === item.presentacionId
            );

            if (idx !== -1) {
                const existente = productosEnCarrito[idx];
                const nuevaCant = existente.cantidad + item.cantidad;
                const stockActual = stockDisponiblePorProducto[item.productoId];
                const stockDisponibleReal = stockActual + existente.cantidad;

                if (nuevaCant > stockDisponibleReal) {
                    alert(`⚠️ Stock insuficiente. Disponible: ${stockDisponibleReal}`);
                    return;
                }

                existente.cantidad = nuevaCant;
                stockDisponiblePorProducto[item.productoId] -= item.cantidad;
                $(`#badge-${item.productoId}`).text(stockDisponiblePorProducto[item.productoId]);

                renderTabla();
                return;
            }

            // Nuevo producto
            stockDisponiblePorProducto[item.productoId] -= item.cantidad;
            $(`#badge-${item.productoId}`).text(stockDisponiblePorProducto[item.productoId]);

            item.stockRestante = stockDisponiblePorProducto[item.productoId];
            productosEnCarrito.push(item);
            renderTabla();
        }

        // =================== Render de tabla del carrito ===================

        function renderTabla() {
            const tbody = $("#tablaSeleccionados tbody");
            tbody.empty();

            if (productosEnCarrito.length === 0) {
                tbody.append("<tr><td colspan='4' class='text-muted'>Aún no hay productos seleccionados.</td></tr>");
                return;
            }

            productosEnCarrito.forEach((p, i) => {

                const stockInfo =
                    categoriaSeleccionada === "licores"
                    ? ""
                    : `<small class='text-muted'>(Stock: ${p.stockRestante})</small>`;

                tbody.append(`
                    <tr>
                        <td>${p.nombre}</td>
                        <td>${p.presentacion}</td>
                        <td>${p.cantidad} ${stockInfo}</td>
                        <td>
                            <button class='btn btn-sm btn-danger eliminar-item' data-index='${i}'>🗑</button>
                        </td>
                    </tr>
                `);
            });
        }

        // =================== Eliminar item del carrito ===================

        $(document).on("click", ".eliminar-item", function () {
            const idx = $(this).data("index");
            const item = productosEnCarrito[idx];

            // Solo restauramos stock si NO es licor
            if (categoriaSeleccionada !== "licores") {
                stockDisponiblePorProducto[item.productoId] += item.cantidad;
                $(`#badge-${item.productoId}`).text(stockDisponiblePorProducto[item.productoId]);
            }

            productosEnCarrito.splice(idx, 1);
            renderTabla();
        });

        // =================== Guardar todo ===================

        $("#btnGuardarTodo").click(function (e) {
            e.preventDefault();

            if (productosEnCarrito.length === 0) {
                alert("⚠️ Debes agregar al menos un producto antes de guardar.");
                return;
            }

            const productosParaEnviar = productosEnCarrito.map(p => ({
                productoId: p.productoId,
                presentacionId: p.presentacionId,
                cantidad: p.cantidad
            }));

            $.ajax({
                url: `/POS/Detalles/${cuentaId}?handler=AgregarMultiples`,
                method: "POST",
                contentType: "application/json",
                headers: { "RequestVerificationToken": token },
                data: JSON.stringify(productosParaEnviar),
                success: function (data) {
                    if (data.success) {
                        window.location.reload();
                    } else {
                        let msg = "⚠️ No se pudieron agregar algunos productos:\n\n";
                        data.errores.forEach(err => msg += `• ${err}\n`);
                        mostrarModalError(mensaje);

                    }
                },
                error: function (xhr) {
                    alert("❌ Error al guardar.\n" + (xhr.responseText || ""));
                }
            });
        });


                    // =================== TABLA DE DETALLES (PRODUCTOS YA AGREGADOS) ===================

        // BOTÓN +
        $(document).on("click", ".btn-mas", function () {
            const detalleId = $(this).data("detalle-id");
            const input = $(`input[data-detalle-id='${detalleId}']`);
            let cantidad = parseInt(input.val()) || 1;

            // Para licores → permitir infinitamente, backend valida ml
            const esLicor = input.closest("tr").find("td:nth-child(3)").text().includes("ml")
                            || input.closest("tr").find("td:nth-child(2)").text() !== "-";

            if (!esLicor) {
                // Productos normales mantienen stockMax
                const stockMax = parseInt($(this).data("stock-max")) || 999;

                if (cantidad >= stockMax) {
                    alert(`⚠️ Stock máximo alcanzado (${stockMax} unidades)`);
                    return;
                }
            }

            cantidad++;
            input.val(cantidad);

            // Llamar al backend
            actualizarCantidad(detalleId, cantidad);
        });

        // BOTÓN -
        $(document).on("click", ".btn-menos", function () {
            const detalleId = $(this).data("detalle-id");
            const input = $(`input[data-detalle-id='${detalleId}']`);
            let cantidad = parseInt(input.val()) || 1;

            if (cantidad > 1) {
                cantidad--;
                input.val(cantidad);
                actualizarCantidad(detalleId, cantidad);
            }
        });

        // CAMBIO MANUAL
        $(document).on("change", ".cantidad-input", function () {
            const detalleId = $(this).data("detalle-id");
            let nuevaCantidad = parseInt($(this).val()) || 1;

            if (nuevaCantidad < 1) nuevaCantidad = 1;

            // Licores → no validar stockMax
            const esLicor = $(this).closest("tr").find("td:nth-child(2)").text() !== "-";

            if (!esLicor) {
                const stockMax = parseInt($(this).data("stock-max")) || 999;
                if (nuevaCantidad > stockMax) {
                    alert(`⚠️ Stock máximo: ${stockMax}`);
                    nuevaCantidad = stockMax;
                }
            }

            $(this).val(nuevaCantidad);
            actualizarCantidad(detalleId, nuevaCantidad);
