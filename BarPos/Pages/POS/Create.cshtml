@page
@model BarPos.Pages.POS.CreateModel
@{
    ViewData["Title"] = "Nueva Cuenta";
}

<h2 class="text-center mb-4">🆕 Abrir Nueva Cuenta</h2>

<div class="card shadow-sm p-4">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="Cuenta.NombreCliente" class="form-label">Nombre del Cliente</label>
            <input asp-for="Cuenta.NombreCliente" class="form-control" placeholder="Ejemplo: Mesa 1 o Juan Pérez" />
            <span asp-validation-for="Cuenta.NombreCliente" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-page="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle"></i> Crear Cuenta
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
